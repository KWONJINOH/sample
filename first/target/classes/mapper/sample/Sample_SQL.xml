<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sample">
	
	<select id="selectBoardList" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
            SELECT 
                *
            FROM TB_BOARD
		]]>
	</select>
    
    <insert id="insertRegister" parameterType="hashmap">
         INSERT INTO TB_BOARD (BOTITLE, USER_NAME, CONTENT)
         VALUES
            (
            #{BOTITLE},
            #{USER_NAME},
            #{BOCONTENT}
            )
    </insert>
    
    <update id="updateRegister" parameterType="hashmap">
        UPDATE 
            TB_BOARD 
        SET 
            BOTITLE =#{BOTITLE},
            USER_NAME = #{BOTITLE},
            CONTENT=#{BOCONTENT} 
        WHERE BONUM = #{BONUM}
    </update>
    
    <delete id="remove" parameterType="hashmap">
        DELETE FROM TB_BOARD WHERE BONUM = #{BONUM}
    </delete>
	
</mapper>
